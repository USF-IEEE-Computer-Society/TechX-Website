{
  "name": "techx-website-2025",
  "private": true,
  "version": "3.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css}\"",
    "preview": "vite preview",
    "prepare": "husky",
    "img:webp": "tsx --tsconfig tsconfig.scripts.json scripts/convert-to-webp.ts",
    "img:resize-mosaic": "tsx --tsconfig tsconfig.scripts.json scripts/resize-mosaic.ts",
    "img:crop": "tsx --tsconfig tsconfig.scripts.json scripts/crop-instagram-45.ts"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.13",
    "@vercel/speed-insights": "^1.2.0",
    "dotenv": "^17.2.3",
    "framer-motion": "^12.23.24",
    "lucide-react": "^0.542.0",
    "posthog-js": "^1.275.3",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-intersection-observer": "^9.16.0",
    "react-router-dom": "^7.9.3",
    "react-scroll": "^1.9.3",
    "react-server-dom-webpack": "^19.2.1",
    "tailwindcss": "^4.1.13"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@types/react-scroll": "^1.8.10",
    "@vitejs/plugin-react": "^5.0.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "glob": "^11.0.3",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "sharp": "^0.34.5",
    "tsx": "^4.20.6",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,css}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
